{% extends 'master/master.template.twig' %}

{# {% set cat = illustration.info %} #}
{% set cat = siteData.navigation.illustration %}
{# {% set gallery = illustration.gallery.items %} #}
{% set gallery = siteData.portfolio.illustration.items %}
{# {% set filePrefix = illustration.gallery.filePrefix %} #}
{% set filePrefix = siteData.portfolio.illustration.filePrefix %}

{% set nav = 2 %}
{% set portfolioSelected = 'illustration' %}

{% block metaHead %}
<meta name="description" content="A whole load of illustratons I've done in the past.  I'm getting back into doing pen on paper again but I'm always having a mess around on Adobe Fresco.">
{% endblock %}

{% block title %}PocketninjaDesign Portfolio {{ cat.title }} Gallery{% endblock %}

{% block pageClass %}page-portfolio page-portfolio-landing{% endblock %}

{% block sideNavBlock %}
  {% include "common/side-navigation.twig" with {
    "current": 2,
    "navigation": siteData.navigation,
    "portfolioSelected": portfolioSelected
  } %}
{% endblock %}

{% block body %}

  {% include "common/portfolio-gallery.twig" with {
    "cat": cat,
    "gallery": gallery,
    "filePrefix": filePrefix
  } %}

  {% include "common/portfolio-information.twig" with {
    "title": cat.title,
    "subTitle": cat.subTitle,
    "detailedDescription": cat.detailedDescription
  } %}

{% endblock %}