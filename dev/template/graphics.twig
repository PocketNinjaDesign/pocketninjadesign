{% extends 'master/master.template.twig' %}

{% set cat = siteData.navigation.graphics %}
{# {% set gallery = graphics.gallery.items %} #}
{% set gallery = siteData.portfolio.graphics.items %}
{# {% set filePrefix = graphics.gallery.filePrefix %} #}
{% set filePrefix = siteData.portfolio.graphics.filePrefix %}

{% set nav = 1 %}
{% set portfolioSelected = 'graphics' %}

{% block metaHead %}
  <meta name="description" content="A whole load of graphics I've done in the past.  Had some fun times and look to having more fun times ahead.">
{% endblock %}

{% block title %}PocketninjaDesign Portfolio {{ cat.title }} Gallery{% endblock %}

{% block pageClass %}page-portfolio page-portfolio-landing{% endblock %}

{% block sideNavBlock %}
  {% include "common/side-navigation.twig" with {
    "current": 1,
    "navigation": siteData.navigation,
    "portfolioSelected": portfolioSelected
  } %}
{% endblock %}

{% block body %}
  {% include "common/portfolio-gallery.twig" with {
    "cat": cat,
    "gallery": gallery,
    "filePrefix": filePrefix
  } %}
  {% include "common/portfolio-information.twig" with {
    "title": cat.title,
    "subTitle": cat.subTitle,
    "detailedDescription": cat.detailedDescription
  } %}
{% endblock %}