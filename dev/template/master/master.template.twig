    <link href="https://fonts.googleapis.com/css?family=Dosis:300,500,800|Fredoka+One:400|Source+Sans+Pro:300,600" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/assets/css/style.css" type="text/css" />

    <script>
      console.log(
        "Welcome to %cPocket%cninja%cDesign.com",
        "color:##3a3b3a;font-size:14px;font-weight:bold;",
        "color:#d91f2d;font-size:14px;font-weight:bold;",
        "color:#cfd0d2;font-size:14px;font-weight:bold;"
      );
