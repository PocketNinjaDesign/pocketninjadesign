{% set commonPath = '../common/' %}

<!doctype html>
<html class="holding" lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#d91f2d">

    {% block metaHead %}{% endblock %}

    <title>{% block title %}{% endblock %}</title>

    <link rel="icon" href="/assets/manifest/favicon.png" type="image/png">
    <link rel="icon" href="/assets/manifest/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/assets/manifest/apple-touch-icon.png">
    <link rel="manifest" href="/assets/manifest/manifest.webmanifest">

