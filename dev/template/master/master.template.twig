  </head>
  <body class="{% block pageClass %}{% endblock %}">

  <!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-P9FS95RN"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->

    <div class="body-block bg-color-1"></div>
    <div class="body-block-2"></div>
    {% set nav = 0 %}
    {% set portfolioSelected = "uidesign" %}

    {% include commonPath ~ "logo.twig" with {
      "id": "primaryLogo",
      "uniqueClass": "primary-logo"
    } %}

    {% block sideNavBlock %}
      {% include commonPath ~ "side-navigation.twig" with {
        "current": nav,
        "navigation": siteData.navigation,
        "portfolioSelected": portfolioSelected
      } %}
    {% endblock %}

    {% block pageBespokeContent %}{% endblock %}

    <div id="contentArea" class="content-area">
      {% block body %}{% endblock %}
    </div>

    {% include commonPath ~ "tree.twig" %}

    <div style="display: none;">
      <div id="ninja" class="ninja">
        <img src="/images/pocketninja-medium.png" alt="Pocketninja little character popping up all over the place!">
      </div>
    </div>
    <script>
      var PND = {};
      PND.data = {
        chickens: "YES"
      }
      PND.siteData = {{ siteData|json_encode|raw }};

      {# console.log('PND.siteData nav [0]: ', PND.siteData.navigation[0]); #}
    </script>
    <script src="/assets/script/main.bundle.js?201803110922"></script>
  </body>
</html>